<script>
    console.log('ddd');
    $(document).ready(function () {
        function isPackageName(str) {
            reg = /^[a-zA-Z0-9-\.]{1,61}$/;
            if (!reg.test(str)) {
                return false;
            }
            return str.indexOf('..') == -1;
        }

        $("#create_app").click(function () {
            if ($("#app-name").val().length == 0) {
                $("#err_msg").text('请输入应用名称');
                return;
            }

            if ($("#app-package-name").val().length == 0) {
                $("#err_msg").text('请输入应用包名');
                return;
            }

            if (!isPackageName($("#app-package-name").val())) {
                $("#err_msg").text('包名的格式不正确');
                return;
            }

            if ($("#app-desc").val().length == 0) {
                $("#err_msg").text('请输入应用描述');
                return;
            }
            $("#err_msg").text('');

            var dialog = bootbox.dialog({
                message: '<p><i class="fa fa-spin fa-spinner"></i> 正在处理...</p>'
            });
            dialog.init(function () {
                jQuery.ajax({
                    url: "#springUrl(
                        '')/app/create?appname=" + $("#app-name").val() + "&description=" + $("#app-desc").val() + "&packageName=" + $("#app-package-name").val(),
                    type: 'post',
                    success: function (res, textStatus, jqXHR) {
                        if (res.code == 200) {
                            dialog.find('.bootbox-body').html('添加成功!');
                            setTimeout(function () {
                                window.location.href = window.location.href;
                            }, 500);
                        } else {
                            dialog.find('.bootbox-body').html("<font color='red'>" + res.message + "</font>");
                        }
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        if (XMLHttpRequest.status == 401) {
                            window.location.href = window.location.href;
                        } else {
                            dialog.find('.bootbox-body').html("<font color='red'>系统异常!</font>");
                        }
                    }
                });
            });
        });
    });

    function deleteApp(uid) {
        console.log(uid)
        bootbox.confirm({
            message: "确定删除这个APP吗?",
            buttons: {
                confirm: {
                    label: 'Yes',
                    className: 'btn-success'
                },
                cancel: {
                    label: 'No',
                    className: 'btn-danger'
                }
            },
            callback: function (result) {
                console.log('This was logged in the callback: ' + result);

                if (!result) {
                    return;
                }

                var dialog = bootbox.dialog({
//                title: 'A custom dialog with init',
                    message: '<p><i class="fa fa-spin fa-spinner"></i> 正在处理...</p>'
                });
                dialog.init(function () {
                    jQuery.ajax({
                        url: "#springUrl('')/app/delete?appUid="+uid,
                        type: 'post',
                        success: function (res, textStatus, jqXHR) {
                            if (res.code == 200) {
                                dialog.find('.bootbox-body').html('删除成功!');

                                setTimeout(function () {
                                    window.location.href = window.location.href;
                                }, 500);
                            } else {
                                dialog.find('.bootbox-body').html(res.message);
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            dialog.find('.bootbox-body').html('系统异常!');
                        }
                    });
                });
            }
        });
    }
</script>
